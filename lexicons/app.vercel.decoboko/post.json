{
  "lexicon": 1,
  "id": "app.vercel.dekoboko.post",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record containing a dekoboko post.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["text", "createdAt", "authorDid"],
        "properties": {
          "text": {
            "type": "string",
            "maxLength": 3000,
            "maxGraphemes": 300,
            "description": "The primary post content."
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Client-declared timestamp when this post was originally created."
          },
          "authorDid": { "type": "string", "format": "at-identifier" }
        }
      }
    }
  }
}
